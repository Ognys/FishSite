@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="home">
    @if(Model.RandomFish != null) {
        <div class="home-interface">
            <img src="@Model.RandomFish.ImagePath" alt="fish" class="interface-img">
            <h2 class="intetface-name">@Model.RandomFish.Name</h2>
            <p class="interface-description">@Model.RandomFish.Description</p>
        </div>
    }
    <div class="home-random">
        <form method="post" class="home-random-form" asp-page-handler="Random">
            <button class="home-random-button">Получить рыбу</button>
        </form>
    </div>
</div>